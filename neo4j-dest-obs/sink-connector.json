{
  "name": "Neo4jSinkConnectorObservations",
  "config": {
    "connector.class": "org.neo4j.connectors.kafka.sink.Neo4jConnector",
    "topics": "observations",
    "key.converter": "io.confluent.connect.json.JsonSchemaConverter",
    "key.converter.schemas.enable": true,
    "key.converter.schema.registry.url": "http://schema-reg:8081",
    "value.converter": "io.confluent.connect.json.JsonSchemaConverter",
    "value.converter.schemas.enable": true,
    "value.converter.schema.registry.url": "http://schema-reg:8081",
    "neo4j.uri": "bolt://neo4j-dest-obs:7687",
    "neo4j.authentication.type": "BASIC",
    "neo4j.authentication.basic.username": "neo4j",
    "neo4j.authentication.basic.password": "password",
    "neo4j.database": "neo4j",
    "neo4j.cypher.topic.observations": "WITH __value AS e WHERE e.temperature > 37 MERGE (p:Patient {id: e.patientId}) MERGE (o:Observation {id: e.observationId}) SET o.timestamp = e.timestamp, o.temperature = e.temperature MERGE (p)-[:HAS]->(o)"
  }
}
